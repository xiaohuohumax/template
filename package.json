{
  "publisher": "xiaohuohumax",
  "name": "ts-vscode-extension-template",
  "displayName": "Typescript VSCode Extension Template",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@9.0.4",
  "description": "ts vscode extension template",
  "author": {
    "name": "xiaohuohumax",
    "url": "https://github.com/xiaohuohumax"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaohuohumax/template.git"
  },
  "keywords": [
    "typescript",
    "vscode",
    "extension",
    "template"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "l10n": "./l10n",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Show Clock",
      "properties": {
        "show-clock.size": {
          "type": "number",
          "description": "%show-clock.config.size.description%",
          "default": 9,
          "minimum": 3
        }
      }
    },
    "commands": [
      {
        "command": "show-clock.view",
        "title": "%show-clock.view.title%"
      }
    ]
  },
  "scripts": {
    "build": "pnpm build:view && vite build --emptyOutDir",
    "build:view": "pnpm --filter=./packages/view build",
    "watch": "vite build --watch --emptyOutDir --mode development",
    "watch:view": "pnpm --filter=./packages/view watch",
    "commit": "git add . && cz",
    "postinstall": "simple-git-hooks",
    "changeset": "changeset",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "vscode:prepublish": "pnpm compile",
    "compile": "pnpm build",
    "vsce-publish": "vsce publish --no-dependencies",
    "vsce-package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "context": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.2.1",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "eslint": "^9.17.0",
    "simple-git-hooks": "^2.11.1",
    "vite": "^6.0.3"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npm run lint:fix && git add ."
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
