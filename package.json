{
  "name": "ts-monorepo-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.4",
  "description": "ts monorepo template",
  "author": {
    "name": "xiaohuohumax",
    "url": "https://github.com/xiaohuohumax"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaohuohumax/template.git"
  },
  "keywords": [
    "typescript",
    "monorepo",
    "template"
  ],
  "scripts": {
    "build": "pnpm -r --filter=./packages/** --stream run build",
    "build:watch": "pnpm build && pnpm -r --filter=./packages/** --parallel --stream run build:watch",
    "commit": "git add . && cz",
    "postinstall": "simple-git-hooks",
    "changeset": "changeset",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/node": "^22.10.2",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npm run lint:fix && git add ."
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
